<aura:component implements="forceCommunity:availableForAllPageTypes" controller="NDIACommLatestUpdatesController"
    access="global">

    <!-- attributes for displaying latest updates -->
    <aura:attribute name="latestUpdates" type="List" />
    <!-- <aura:attribute name="importantLinks" type="List" /> -->

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <!-- displaying latest updates -->
    <div class="slds-box">
        <h1 class="header-bg"> <b style="margin-left:10px;">Latest Updates </b></h1> <br />
        <aura:iteration items="{!v.latestUpdates}" var="ltstUpdate">
            <div class="slds-var-m-around_small">
                <div style="width:300x">
                    
                        <h3 class="slds-tile__title slds-truncate">
                            <a href="{!ltstUpdate.NDIAUrl__c}" target="_blank">
                                    <!-- <div onclick="{!c.handleLatestUpdate}"></div> -->
                                {!ltstUpdate.Title}</a>

                        </h3>


                </div>

            </div>

        </aura:iteration> <br /><br />
    </div>
    <br/>
